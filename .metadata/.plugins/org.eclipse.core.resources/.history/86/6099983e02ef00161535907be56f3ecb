import java.util.ArrayList;
import java.util.List;

public class Board {
	static int size;
	int c;
	int r;
	public static String[][] gameboard;
	
	public Board(){
	}
	
	public Board(int n){
		size=n;
		gameboard= new String[n][n];
	}
	
	public static void drawBoard(){
		int row = gameboard.length;
		int col = gameboard[0].length;;

		System.out.print("    ");
		for (int i = 0; i < col; i++)
			System.out.print(i + "   ");
		System.out.println();

		for (int i = 0; i < row; i++) {
			System.out.print(i + "  ");
			for (int j = 0; j < col; j++) {
				if (j ==0){

				}
				else{
					System.out.print(".");
				}
				System.out.print(" " + gameboard[i][j] + " ");
			}
			System.out.println();
			if (i != (row - 1)) {
				System.out.print("   ");
				for (int j = 0; j <col; j++) {
					if (j != 0)
						System.out.print("......");
				}
				System.out.println();
			}
		}
		System.out.println();
	}
	
	public static boolean isEmpty(int a, int b){
		return gameboard[a][b] == null;
	}
	
	public static void move(int x, int y, Player p1){
		if(isEmpty(x,y)){
			gameboard[x][y]=p1.getT();	
		}
	}
	
	public static void moveCPU(int x, int y, CPU p2){
		if(isEmpty(x,y)){
			gameboard[x][y]=p2.getT();	
		}
	}
	
	public List<Move> MovesPossible(Player p3, Board b){
		List<Move>AllMoves = new ArrayList<Move>();
		for(int t=0;t<size;t++){
			for(int u=0;u<size;u++){
				if(isEmpty(t,u)==true){
					AllMoves.add(new Move(b,t,u,p3));
					
				}
			}
		}
		return AllMoves;
	}

	public String CheckWinner(){
		String p;
		p=CheckV();
		if(p!=null){
			return p;
		}
		p = CheckH();
		if(p!=null){
			return p;
		}
		p=CheckD();
		if(p!=null){
			return p;
		}
		return null;
	}
	
	public static String CheckAnswer(int x,int y, int x1, int y1){	 
		String p1 = gameboard[x][y];
		if(p1==(null)){
			return null;
		}
		while (x >= 0 && x < size && y >= 0 && y < size) {
			if (gameboard[x][y] != p1) {
				return null;
			}


			x += x1;
			y += y1;
		}
		return p1;
	}

	public static String CheckH(){
		for (int i=0; i < size; i++) {
			String p = CheckAnswer(i,0,0,1);
			if (p != null) {
				return p;
			}
		}
		return null;
	}
	
	public static String CheckV(){
		for(int i =0; i<size;i++){
			String p = CheckAnswer(0,i,1,0);
			if (p!=null){
				return p;
			}
		}	return null;
	}

	public static String CheckD(){
		String p = CheckAnswer(0, 0, 1, 1);
		if (p != null) {
			return p;
		}
		p = CheckAnswer(0, size-1, 1, -1);
		if (p != null) {
			return p;
		}
		return null;
	}
	
	public static boolean isfull(){
		for(int i=0;i<size;i++){
			for(int j=0;j<size;j++){
				if(gameboard[i][j]==null){
					return false;
				}
			}
			
		}
		return true;
	}




